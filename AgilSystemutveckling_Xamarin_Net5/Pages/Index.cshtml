        color: #6FC767;
        font-weight: bold;
        border: none;
    }
    

    #LogIn {
        font-size: 36px;
        background-color:#6FC767;
        color: white;
        border: none;
        width: 406px;
        height: 103px;
        margin-top: 50px;
        margin-right: 20px;
        border-radius:12px;
    }

    #Guest {
        font-size: 36px;
        background-color:#6FC767;
        color: white;
        border: none;
        width: 406px;
        height: 103px;
        margin-top: 50px;
        margin-left: 20px;
        border-radius:12px;
    }


    input.Test {
        font-size: 36px;
        background-color: #FFC48E;
        color: white;
        border: none;
        width: 406px;
        height: 103px;
        margin-top: 300px;
        margin-left: 20px;
    }

    input.Info {
        font-size: 24px;
        background-color: #9AC4F5;
        color: white;
        border: none;
        width: 209px;
        height: 46px;
        margin-top: 100px;
        margin-left: 1300px;
        }

     .indexBtns{
        display: flex;
        align-items: center;
        justify-content: center;
        }

    /* Slideshow container */
    .slideshow-container {
        width: 400px;
        position: relative;
        margin: auto;
        height: 400px;
        background-color: white;
        border-radius:12px;
        display: flex;
        justify-content: center;
        margin-top: 100px;
    }
    
    
</style>

<div class="slideshow-container">
    <table>
        <tr>
            <td>
                <h3 style="text-align:center; color: #6FC767; margin-top: 20px;"><b>Newest books</b></h3>
            </td>
        </tr>
        <tr>
            <td>
                @foreach(var item in IndexModel.products)
                {
                    <!-- Full-width images with number and caption text -->
                    <div class="mySlides">
                        <img src="@item.ImgUrl" style="width:200px; height: 270px;">
                    </div>

                }
            </td>
        </tr>
    </table>
</div>
<br>
    <div class="indexBtns">
        <form>
            <input id="LogIn" class="Buttons" type="submit" asp-page="/LoginPage" value="Login">
        </form>
        <form method="get">
            <input id="Guest" class="Buttons" type="submit" asp-page="/SearchPage" value="Guest">
        </form>
    </div>
</div>


<script>
    let slideIndex = 0;
    showSlides();

    function showSlides() {
      let i;
      let slides = document.getElementsByClassName("mySlides");
      for (i = 0; i < slides.length; i++) {
        slides[i].style.display = "none";
      }
      slideIndex++;
      if (slideIndex > slides.length) {slideIndex = 1}
      slides[slideIndex-1].style.display = "block";
      setTimeout(showSlides, 3000); // Change image every 2 seconds
    }
</script>

<style>

    .body-container {
            /*remove the container default padding attribute*/
            padding-left: 0px !important;
            padding-right: 0px !important;
            /*increase width as per your need*/
            max-width: 100%;
        } 
</style>
