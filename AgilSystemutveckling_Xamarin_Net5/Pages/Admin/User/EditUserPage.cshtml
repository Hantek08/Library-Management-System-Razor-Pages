@page
@model AgilSystemutveckling_Xamarin_Net5.Pages.Admin.User.EditUserPageModel
@{
}

<form method="post">
    <div class="containerDesc">
        <h1 id="full_name">@EditUserPageModel.UserInfo.FirstName @EditUserPageModel.UserInfo.LastName</h1>
        <div class="info_box">
            <h5>Accses: @EditUserPageModel.UserInfo.Level</h5>
            <h5>Username: @EditUserPageModel.UserInfo.Username</h5>
            <h5>Addres: @EditUserPageModel.UserInfo.Address</h5>
            <h5>Blocked: @EditUserPageModel.UserInfo.Blocked</h5>
             <form method="post">
                @if(@EditUserPageModel.UserInfo.Blocked == true)
                {
                    <button class="btn btn-default" asp-page-handler="Unblock"> Unblock</button>
                }
                else
                {
                    <button class="btn btn-default" asp-page-handler="Block"> Block </button>
                }
            </form>
        </div>

    </div>
 </form>

 <style>
     .containerDesc{
            position: absolute;
            width: 800px;
            height: 450px;
            margin-left: 300px;
            background: #FFFFFF;
            border-radius: 79px;
            margin-top: 44px;
    }

    #full_name{
            margin-left: 260px;
            margin-top: 10px;
    }

    .info_box{
        margin-left: 50px;
         margin-top: 25px;
    }
 </style>