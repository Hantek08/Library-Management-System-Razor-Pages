<!--A form to edit user address and password-->

  
<form method="post">

    <div class="container">
                             <div class="row">
                                  <div class="col-5">
			                    <h2 class="text-primary pl-3"> @EditUserPageModel.UserInfo.FirstName @EditUserPageModel.UserInfo.LastName</h2>
                                <hr />
                                </div>
                                </div>
                                <div class="row align-items-center">
                                     <div class="col col-md-2 mb-3 ">
                                  <label asp-for="@EditUserPageModel.UserInfo.Address"  class="form-label"  style="font-weight: 500;">New Address</label>

                              </div>
                                <div class="col col-md-4 mb-3" style="margin-left: -115px;">
                                    <input name="newAddress" asp-for="@EditUserPageModel.UserInfo.Address" type="text" class="form-control">
                              </div>
                              <div class="col col-md-4 mb-3">
                                    	<button asp-page-handler="SaveAddress" type="submit" class="btn btn-secondary" style="width:150px;">Update</button>
                            </div>
                              </div>
                            
                     <div class="row align-items-center">
                                     <div class="col col-md-2 mb-3">
                                  <label asp-for="@EditUserPageModel.UserInfo.Password" class="form-label"  style="font-weight: 500;">New Password</label>

                              </div>
                                <div class="col col-md-4 mb-3" style="margin-left: -115px;">
                                    <input name="newPassword" asp-for="@EditUserPageModel.UserInfo.Password" type="password" value="" class="form-control">
                              </div>
                              <div class="col col-md-4 mb-3">
                                    	<button asp-page-handler="SavePassword" type="submit" class="btn btn-secondary" style="width:150px;">Update</button>
                            </div>
                              </div>
       
            <div>
            <label style="font-weight: 500;" id="blocked_label">Blocked:

                <div class="child">
                   <!--this will block and unblock user -->
                <form method="post">
                    @if(@EditUserPageModel.UserInfo.Blocked == true)
                    {
                        <button class="btn btn-danger text-white" asp-page-handler="Unblock"  style="background-color:#e74c3c"><i class="fas fa-lock"></i></button>
                         
                    }
                    else
                    {
                        <button class="btn btn-success text-white" asp-page-handler="Block" style="background-color: #6FC767;"><i class="fas fa-lock-open"></i></button>

                    }
                </form>
                </div>

            </label>
            </div>
        </div>

 </form>


