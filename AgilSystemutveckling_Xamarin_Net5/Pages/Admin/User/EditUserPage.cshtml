@page
@model AgilSystemutveckling_Xamarin_Net5.Pages.Admin.User.EditUserPageModel
@{
}

<form method="post">
    <div class="containerDesc">
        <h1 id="full_name">@EditUserPageModel.UserInfo.FirstName @EditUserPageModel.UserInfo.LastName</h1>
        <div class="info_box">
            <div>
                <label style="margin-top:60px;margin-bottom: 40px;"> New Addres: 
                    <input type="text"/>
                </label>
            </div>
            <div>
                <label style="margin-top:10px;margin-bottom: 40px;"> New Password: 
                    <input type="text"/>
                </label>
            </div>
            <label id="blocked_label">Blocked:
                <h5>@EditUserPageModel.UserInfo.Blocked</h5>
                <form method="post">
                    @if(@EditUserPageModel.UserInfo.Blocked == true)
                    {
                        <button class="btn btn-danger text-white" asp-page-handler="Unblock"  style="background-color:#e74c3c"><i class="fas fa-lock"></i></button>
                         
                    }
                    else
                    {
                        <button class="btn btn-success text-white" asp-page-handler="Block" style="background-color: #6FC767;"><i class="fas fa-lock-open"></i></button>

                    }
                </form>
            </label>
        </div>

    </div>
 </form>

 <style>
     .containerDesc{
            position: absolute;
            width: 800px;
            height: 450px;
            margin-left: 300px;
