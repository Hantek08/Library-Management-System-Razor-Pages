@page
@model AgilSystemutveckling_Xamarin_Net5.Pages.Admin.User.UserListPageModel
@{
}

<header class="Menu"> 

    <ul class="nav nav-pills nav-fill">
      <li class="nav-item">
        <a class="nav-link" aria-current="page" href="/SearchPage">Products</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="#">Users</a>
      </li>
      
      <li class="nav-item">
        <a class="nav-link disabled">Disabled</a>
      </li>
    </ul>
   
</header>

<input type="text" id="my_input" onkeyup="myFunction()" placeholder="Search for names.." title="Type in a name">

  @foreach (var item in TestService.GetService.Get.GetAllUsers())
  {
    <table id="myTable">
        <tr>
            <td>
                <table>
                    <tr>
                        <td>
                            <div id="info_box">
                                <p>ID: @item.Id</p>
                                <p>Username: @item.Username</p>
                                <p>Password: @item.Password</p>
                                <p>Access lvl: @item.Access</p>
                            </div>
                        </td>
                </table>
            </td>
        </tr>
    </table>
  }

  <style>
      #my_input{
            width: 800px;
            height: 40px;
            margin-top: 20px;
            margin-bottom: 20px;
        }
        #info_box{
            background-color:white;
            padding-bottom: 15px;
            padding-top:15px;
            padding-right: 500px;
            border-radius: 10px;
            padding-left: 30px;
        }

  </style>