@page
@model AgilSystemutveckling_Xamarin_Net5.Pages.TestPageModel

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">TestPage</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-primary">
                <i class="bi bi-pencil-square"></i> &nbsp;Create new author
            </a>
        </div>
    </div>

    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Author ID
                </th>
                <th>
                    Author Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in TestPageModel.Authors)
            {
                <tr>
                    <td>@obj.Id</td>
                    <td>@obj.AuthorName</td>
                    <td>
                        <a asp-page="Edit" class="btn btn-primary mx-2">

                        </a>
                        <a asp-page="Delete" class="btn btn-danger mx-2">

                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>