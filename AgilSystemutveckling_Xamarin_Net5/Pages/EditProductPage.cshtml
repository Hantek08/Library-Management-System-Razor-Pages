<!--Edit description layout -->
<form method="post">
    <div class="containerDesc">
        <div class="row">
        <div class="col-sm-3">
            <img id="imageDesc" src="@DescriptionPageModel.imgUrl"/>
        </div>
        <div class="col-sm-7">
            <div class="row">
                <div class="col-8 col-sm-6">
                    <div class="desctitleauthor">
                        <h3 class ="descTitle">@DescriptionPageModel.title</h3>
                        <h5 class="descAuthor">Author: @DescriptionPageModel.author</h5>                        
                    </div>
                </div>                
            </div>
        </div>
        <div class="col-2">
            <button id="save_changes_button" class="btn btn-default" asp-page-handler="SaveChanges">Save Changes</button>
        </div>
        </div>
            <div contenteditable="true" class="row">
                <div class="col-sm-12">
                    <textarea name="newDescription" id="edit_description_area" asp-for="@EditProductPageModel.EditProduct.Description" class="form-control" ></textarea>
                </div>
            </div>
            <!--Units in stock edit-->
            <div id="desc_for_counter">In Stock:
                <input name="newStockAmount" asp-for="@EditProductPageModel.EditProduct.UnitsInStock" type="number" min="0" max="100" class="form-control"/>
            </div>
    </div>
 </form>

<!--Back Arrow symbol-->
<form action="/ProductPage">
    <button class="backToSearch">
        <i class="bi bi-arrow-left" id="backToSearchimg"></i>
    </button>
</form> 


