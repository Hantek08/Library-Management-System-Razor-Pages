        border:0px;
        padding-right: 105px;
    }
    .descHolder{
        width: 600px;
        text-align: center;
        margin-left: 90px;
        margin-top: 30px;
    }

    .descAuthor{
        margin-left: 150px;
        margin-top: 20px;
    }
    .desctitleauthor{
        width: 600px;
        text-align: center;
        margin-left: -250px;
        margin-top: 30px;
    }



#editbutton{
    margin-left: 143px;
    margin-top: 76px;
    width: 29px;
    height: 27px;
    font-size: 10px;
}

</style>

<!--Description layout with all the info of a product -->
<form method="post">
    <div class="containerDesc">
        <div class="row">
        <div class="col-sm-3">
            <img id="imageDesc" src="@DescriptionPageModel.imgUrl"/>
        </div>
        <div class="col-sm-9">
            <div class="row">
                <div class="col-8 col-sm-6">
                    <div class="desctitleauthor">
                        <h3 class ="descTitle">@DescriptionPageModel.title</h3>
                        <h5 class="descAuthor">Author: @DescriptionPageModel.author</h5>
                    </div>
                </div>
                <div class="col-4 col-sm-6">
                    @if (Globals.LoggedInUser.Level == 1 && @DescriptionPageModel.unitsinstock > 0 && Globals.LoggedInUser.Blocked == false && Globals.CartList.Count < 5)
                        { 
                             <div class="popup" onclick="myFunction()">
                                 <button type="submit" class="btn btn-primary" id="makealoan" asp-page-handler="AddToCart" >Lend</button> 
                             </div>
                        }
                    else if(Globals.LoggedInUser.Level > 1)
                    {
                       <a
                        asp-page="EditProductPage"
                        asp-route-id="@DescriptionPageModel.product.Id">
                            <img id="editbutton" src="data:image/svg+xml;base64,">
                        </a> 
                    }
                </div>
            </div>
        </div>
        </div>
            <div class="row">
                <div class="col-sm-12">
                    <p class="descHolder">@DescriptionPageModel.description</p>
                </div>
            </div>
    </div>
 </form>

 <!--Back Arrow symbol-->
<form action="/ProductPage">
    <button class="backToSearch">
        <i class="bi bi-arrow-left" id="backToSearchimg"></i>
    </button>
</form> 


<script src="assets/js/jquery.min.js"></script>
<script src="assets/js/bootstrap.min.js"></script>
