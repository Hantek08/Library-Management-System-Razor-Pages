}


<style>
    .containerDesc{
        position: absolute;
        width: 800px;
        height: 372px;
        margin-left: 26%;
        background: #FFFFFF;
        border-radius: 79px;
        margin-top: 44px;
    }

    .descTitle{
         margin-left: 200px;
         margin-top: 60px;

    }

    .body-container {
            /*remove the container default padding attribute*/
            padding-left: 0px !important;
            padding-right: 0px !important;
            /*increase width as per your need*/
            max-width: 100%;

    }

    .backToSearch {
        font-size: 24px;
        color: white;
        border: none;
        width: 100px;
        height: 46px;
        margin-top: 300px;
        margin-left: -10px;
    }

    #backToSearchimg {
        font-size: 50px;
        color: black;
        border: none;
        width: 50px;
        height: 46px;
        margin-top: -50px;
        margin-left: 40px;
    }

    #EditDesc {
        font-size: 19px;
        background-color: #6FC767;
        color: white;
        border: none;
        width: 60px;
        height: 30px;
        margin-left: 85%;
        margin-top: 50%;
    }

    #imageDesc{
        width: 100px;
        margin-left: 50px;
        margin-top: 45px;
    }
    #makealoan{
        font-size: 20px;
        width: 150px;
        height:40px;
        color:white;
        font-weight:bold;
        background-color:#6FC767;
        margin-top: 81px;
        margin-left:55px;
